<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Adopto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_button</item>
        <item name="iconTint">@color/primary_text</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.Adopto.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_style_primary</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Widget.Adopto.SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_style_secondary</item>
    </style>

    <style name="Theme.Adopto" parent="Base.Theme.Adopto" />

    <style name="SpinnerTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>