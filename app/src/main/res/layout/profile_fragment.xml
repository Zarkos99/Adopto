<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/primary_background"
    android:fitsSystemWindows="true"
    tools:context=".profile.ProfileFragment">

    <!--    User Details  -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="25sp"
        android:gravity="top"
        android:background="@color/primary_background"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/profile_picture_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:background="@drawable/image_border"
            android:contentDescription="Profile Picture" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.6"
            android:layout_marginStart="10sp"
            android:gravity="top"
            android:background="@color/primary_background"
            android:fitsSystemWindows="true">
            <!-- public username display -->
            <TextView
                android:id="@+id/public_username"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="start"
                android:textColor="@color/primary_text"
                android:textSize="30sp" />

            <!-- TODO: Preferences button -->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/biography_field"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_animal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="Add animal to a shelter profile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Post\nAnimal" />
    </LinearLayout>

    <!--    Gallery of Saved Animals-->
    <!--    2D RecyclerView of personal user posted sunsets-->
    <!--    Combination of layout_height = 0dp and layout_weight = 1 allows
    recyclerview to adapt in height to take up only unused space  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_animals"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top|start"
        android:orientation="horizontal"
        tools:listitem="@layout/profile_saved_animals_item" />
</LinearLayout>