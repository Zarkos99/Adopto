<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/primary_background"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.Adopto"
    tools:context=".profile.ExplorePreferencesActivity">

    <TextView
        android:id="@+id/preferences_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Animal Preferences"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preferences_title"
        android:layout_above="@id/save_preferences_button"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="Age: "
            android:textSize="25sp"
            android:textColor="@color/primary_text" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/age_range_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="30"
            android:stepSize="1"
            app:thumbTint="@color/primary_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sizes: "
                android:textSize="25sp"
                android:textColor="@color/primary_text" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/primary_button">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/sizes_multi_select_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hintText="Select Items" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Types: "
                android:textSize="25sp"
                android:textColor="@color/primary_text" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/primary_button">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/types_multi_select_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hintText="Select Items" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save_preferences_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="10sp"
        android:layout_alignParentEnd="true"
        android:text="Save"
        android:clickable="false"
        android:height="60sp" />
</RelativeLayout>