<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/primary_background"
    android:fitsSystemWindows="true"
    tools:context=".profile.AnimalProfileCreationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="New Animal:"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/default_profile_pic" />


    <!--    Name input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Name:" />

        <EditText
            android:id="@+id/animal_name_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/card_background"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Name input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Age:" />

        <EditText
            android:id="@+id/animal_age_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/card_background"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Health input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Health:" />

        <EditText
            android:id="@+id/animal_health_input_field"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/card_background"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Description input field-->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Description:" />

        <EditText
            android:id="@+id/description_input_field"
            android:layout_width="260sp"
            android:layout_height="150sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/card_background"
            android:gravity="center"
            android:textColorHint="@color/primary_background"
            android:textSize="24sp" />
    </RelativeLayout>

    <!--    Additional images input -->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/primary_background">

        <TextView
            android:id="@+id/additional_images_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Additional Images:" />

        <Button
            android:id="@+id/additional_images_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/additional_images_text"
            android:layout_marginStart="10sp"
            android:textSize="25sp"
            android:text="+" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="30sp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/create_button"
            android:layout_marginEnd="25sp"
            android:text="Cancel" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Create" />

    </RelativeLayout>

</LinearLayout>